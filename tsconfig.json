{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "dist/",
        "rootDir": "src/",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "ts-node": {
        "transpileOnly": true
    }
}
